@model VT.Web.Models.SplashCustomerModel

<form id="saveCustomerForm" action="@Url.Action("SaveCustomer", "Splash")" class="form-horizontal" method="POST" role="form">
    <div class="row">
        <div class="col-lg-12">
            @Html.HiddenFor(x => x.CompanyId)
            @Html.HiddenFor(x => x.CustomerId)
            @Html.HiddenFor(x => x.IsCustomerMode)
            <div class="form-group">
                <label class="col-sm-3 control-label">First Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.CustomerFirstName, new { @class = "form-control small" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Last Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.CustomerLastName, new { @class = "form-control small" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Email</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.CustomerEmail, new { @class = "form-control small" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="card-number">Card Number</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.PaymentNumber, new { @class = "form-control small" })
                </div>
                <div class="col-sm-9" id="card-number"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="cvv">CVV</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.PaymentCvv, new { @class = "form-control small" })
                </div>
                <div class="col-sm-9" id="cvv"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Payment Method</label>
                <div class="col-sm-4">
                    @Html.DropDownListFor(x => x.PaymentMethod, ViewData["PaymentMethod"] as IEnumerable<SelectListItem>, new { @class = "form-control" })
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="expiration-date">Expiration Date</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.PaymentExpiration, new { @class = "form-control small" })
                </div>
                <div class="col-sm-9" id="expiration-date"></div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btnSaveCustomer" type="submit" class="btn btn-warning">Submit</button>
            </div>
        </div>
    </div>
</form>
